{
  "info": {
    "name": "ChatRecap API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/test-data.txt"
            },
            {
              "key": "platform",
              "value": "discord",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/chat-processing/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "chat-processing", "upload"]
        }
      },
      "response": []
    },
    {
      "name": "Get File Status",
      "request": {
        "method": "GET",
        "header": [],
