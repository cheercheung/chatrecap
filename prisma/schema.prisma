generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  amount    Float
  status    OrderStatus @default(PENDING)
  paymentId String?
  fileId    String?     // 添加fileId字段
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}
